---
import Logo from "@/components/icons/Logo.astro"
import info from "@/data/general-info.json"
---

<footer class="bg-gray-900" id="contacto">
	<div class="mx-auto w-full max-w-screen-xl p-4 py-6 lg:py-8">
		<div class="md:flex md:justify-between">
			<div class="mb-6 md:mb-0">
				<Logo class="w-24 text-white" />
				<span class="text-xl text-white">Agilidad en pagos</span>
			</div>
			<div class="flex flex-col gap-4">
				<a
					href={info.maps}
					target="_blank"
					rel="nofollow"
					class="flex gap-4 text-white hover:text-gray-200"
				>
					<svg
						xmlns="http://www.w3.org/2000/svg"
						class="icon icon-tabler icon-tabler-map-pin-filled h-6 w-6"
						viewBox="0 0 24 24"
						stroke-width="1.5"
						stroke="currentColor"
						fill="none"
						stroke-linecap="round"
						stroke-linejoin="round"
						><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
							d="M18.364 4.636a9 9 0 0 1 .203 12.519l-.203 .21l-4.243 4.242a3 3 0 0 1 -4.097 .135l-.144 -.135l-4.244 -4.243a9 9 0 0 1 12.728 -12.728zm-6.364 3.364a3 3 0 1 0 0 6a3 3 0 0 0 0 -6z"
							stroke-width="0"
							fill="currentColor"></path></svg
					>
					<span>
						{info.location}
					</span>
				</a>

				<a
					href={`mailto:${info.email}`}
					target="_blank"
					rel="nofollow"
					class="flex gap-4 text-white hover:text-gray-200"
				>
					<svg
						xmlns="http://www.w3.org/2000/svg"
						class="icon icon-tabler icon-tabler-mail-filled h-6 w-6"
						viewBox="0 0 24 24"
						stroke-width="1.5"
						stroke="currentColor"
						fill="none"
						stroke-linecap="round"
						stroke-linejoin="round"
						><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
							d="M22 7.535v9.465a3 3 0 0 1 -2.824 2.995l-.176 .005h-14a3 3 0 0 1 -2.995 -2.824l-.005 -.176v-9.465l9.445 6.297l.116 .066a1 1 0 0 0 .878 0l.116 -.066l9.445 -6.297z"
							stroke-width="0"
							fill="currentColor"></path><path
							d="M19 4c1.08 0 2.027 .57 2.555 1.427l-9.555 6.37l-9.555 -6.37a2.999 2.999 0 0 1 2.354 -1.42l.201 -.007h14z"
							stroke-width="0"
							fill="currentColor"></path></svg
					>
					<span>{info.email}</span>
				</a>

				<a
					href={`tel:${info.phone}`}
					target="_blank"
					rel="nofollow"
					class="flex gap-4 text-white hover:text-gray-200"
				>
					<svg
						xmlns="http://www.w3.org/2000/svg"
						class="icon icon-tabler icon-tabler-phone-filled h-6 w-6"
						viewBox="0 0 24 24"
						stroke-width="1.5"
						stroke="currentColor"
						fill="none"
						stroke-linecap="round"
						stroke-linejoin="round"
						><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
							d="M9 3a1 1 0 0 1 .877 .519l.051 .11l2 5a1 1 0 0 1 -.313 1.16l-.1 .068l-1.674 1.004l.063 .103a10 10 0 0 0 3.132 3.132l.102 .062l1.005 -1.672a1 1 0 0 1 1.113 -.453l.115 .039l5 2a1 1 0 0 1 .622 .807l.007 .121v4c0 1.657 -1.343 3 -3.06 2.998c-8.579 -.521 -15.418 -7.36 -15.94 -15.998a3 3 0 0 1 2.824 -2.995l.176 -.005h4z"
							stroke-width="0"
							fill="currentColor"></path></svg
					>
					<span>{info.phone}</span>
				</a>
			</div>
		</div>
		<hr class="my-6 border-gray-700 sm:mx-auto lg:my-8" />
		<div class="sm:flex sm:items-center sm:justify-between">
			<span class="text-sm text-gray-400 sm:text-center"
				>Â© {info.year}
				<a href="/" class="hover:underline">{info.name}</a>. Todos los derechos reservados.
			</span>
			<div class="mt-4 flex gap-4 sm:mt-0 sm:justify-center">
				<a
					href={info.facebook}
					target="_blank"
					rel="nofollow"
					class="text-white hover:text-gray-200"
				>
					<svg
						class="h-6 w-6"
						data-testid="geist-icon"
						shape-rendering="geometricPrecision"
						stroke="currentColor"
						stroke-linecap="round"
						stroke-linejoin="round"
						stroke-width="1.5"
						viewBox="0 0 24 24"
						style="color:var(--geist-foreground);--geist-fill:currentColor;--geist-stroke:var(--geist-background);width:24px;height:24px"
					>
						<path
							fill="var(--geist-fill)"
							d="M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z"></path>
					</svg>
					<span class="sr-only">Facebook page</span>
				</a>
				<a
					href={info.linkedin}
					target="_blank"
					rel="nofollow"
					class="text-white hover:text-gray-200"
				>
					<svg
						class="h-6 w-6"
						data-testid="geist-icon"
						shape-rendering="geometricPrecision"
						stroke="currentColor"
						stroke-linecap="round"
						stroke-linejoin="round"
						stroke-width="1.5"
						viewBox="0 0 24 24"
						style="color:var(--geist-foreground);--geist-fill:currentColor;--geist-stroke:var(--geist-background);width:24px;height:24px"
						><path
							fill="var(--geist-fill)"
							stroke="var(--geist-fill)"
							d="M16 8a6 6 0 016 6v7h-4v-7a2 2 0 00-2-2 2 2 0 00-2 2v7h-4v-7a6 6 0 016-6z"
						></path><path fill="var(--geist-fill)" stroke="var(--geist-fill)" d="M2 9h4v12H2z"
						></path><circle stroke="var(--geist-fill)" fill="var(--geist-fill)" cx="4" cy="4" r="2"
						></circle>
					</svg>
					<span class="sr-only">linkedin page</span>
				</a>
			</div>
		</div>
	</div>
</footer>
